{% extends "template.twig" %}
{% block title %}
{% set title = 'Modifier Post' %} 
{{ title }}
{% endblock %}
{% block head %}
    {{ parent() }}
    
{% endblock %}
{% block body %}
        <header>
            <ul class="navbar navbar-dark bg-primary">  
                <li class="nav-item list-inline-item">
                <a class="navbar-brand" href="index.php?r=index">Accueil</a></li>
                <li class="nav-item list-inline-item">
                <a class="navbar-brand" href="/blog/connect">Déconnexion</a></li>
                
            </ul>
            
            
        </header>
        <p><a href="/blog/postsmanager/{{ postformview.id_utilisateur }}">Retour à la liste des billets</a></p>
        <form action="/blog/postupdate/{{ postformview.id }}  " method="post" style="margin-top: 150px;" >
            <div class="form-group">
                <label for="title">title</label><br />
                <input class="form-control" type="text" id="author" name="title" value=" {{ postformview.title }} "/>
            </div>
            <div class="form-group">
                <label for="content">content</label><br />
                <input class="form-control" type="text" name="content" required
                    minlength="4" maxlength="8999" size="150" value=" {{ postformview.content }} "/>
            </div>
            <div>
                <input type="submit" value="Modifier" class="btn btn-primary "/>
            </div>
        </form>
        
{% endblock %}   